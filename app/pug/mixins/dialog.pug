mixin dialog(dialog)    
  if dialog.type == "interlocutor"
    div.row.justify-content-start
      div.col-lg-9.mb-3
        div.d-flex
          img(src=dialog.avatar alt=dialog.name).rounded-circle.mr-4.square-50.align-self-end
          div(style="box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.08);").p-4.bg-light.radius.flex-grow-1
            div.font-weight-bold.mb-1=dialog.name
            div.text-secondary.mb-2=dialog.text
            hr.border-bottom.mb-1
            small.text-secondary=dialog.session
  else
    div.row.justify-content-end
      div.col-lg-9.mb-3
        div.d-flex
          img(src=dialog.avatar alt=dialog.name).rounded-circle.mr-4.square-50.align-self-end
          div(style="box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.08);").p-4.bg-primary.radius.flex-grow-1
            div.text-light.mb-2=dialog.text
            hr.border-bottom.mb-1
            small.text-grey=dialog.session

  
