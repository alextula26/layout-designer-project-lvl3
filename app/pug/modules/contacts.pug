mixin contact(name, status, avatar)
  a(href="#").contact.d-flex.align-items-center
    img(src= avatar).contact-avatar
    span.contact-info.d-block
      span.contact-name.d-block= name
      small.contact-status.d-block= status


h2.mb-5.font-weight-bold Контакты
each val, key in contacts
  div.text-muted.mb-5
    span.contact-alphabet= key
    each data in val
      +contact(data.name, data.status, data.avatar)
