extends ../layout/main

block variables
  -var pageTitle = "Мессенджер «Hexlet Chat» | Главная"
  -var youAreUsingPug = true

block left-side
  div#myTabContent.tab-content
    div(role="tabpanel" aria-labelledby="contacts-tab")#contacts.tab-pane.fade.show.active
      include ../modules/contacts
    div(role="tabpanel" aria-labelledby="chats-tab")#chats.tab-pane.fade Сообщения
    div(role="tabpanel" aria-labelledby="profile-tab")#profile.tab-pane.fade Профиль  

block right-side
  div.d-flex.justify-content-center.align-items-center.flex-column.h-100
    img(src="./images/avatar_1.jpg" alt="").rounded-circle.mb-3
    span.font-weight-bold Привет, Кодовёнок
    small.text-secondary Выбери чат, чтобы начать общаться